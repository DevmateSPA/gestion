<Window x:Class="Gestion.presentation.views.windows.AgregarBancoWindow_test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregando Registro"
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#000080"
        FontFamily="Consolas"
        FontSize="16"
        WindowStyle="None"
        BorderThickness="2"
        BorderBrush="Cyan">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Agregando Registro"
                   Foreground="Gold"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Margin="0,0,0,10"/>

        <!-- Campos -->
        <StackPanel Grid.Row="1" Margin="10,0">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Código" Width="100" Foreground="Cyan"/>
                <TextBox x:Name="txtCodigo"
                         Width="200"
                         Background="#000080"
                         Foreground="Cyan"
                         BorderBrush="Cyan"
                         CaretBrush="Cyan"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Nombre" Width="100" Foreground="Cyan"/>
                <TextBox x:Name="txtNombre"
                         Width="200"
                         Background="#000080"
                         Foreground="Cyan"
                         BorderBrush="Cyan"
                         CaretBrush="Cyan"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Dirección" Width="100" Foreground="Cyan"/>
                <TextBox x:Name="txtDireccion"
                         Width="200"
                         Background="#000080"
                         Foreground="Cyan"
                         BorderBrush="Cyan"
                         CaretBrush="Cyan"/>
            </StackPanel>
        </StackPanel>

        <!-- Línea inferior -->
        <Rectangle Grid.Row="2"
                   Height="2"
                   Fill="Cyan"
                   Margin="0,10,0,10"/>

        <!-- Mensaje -->
        <TextBlock Grid.Row="3"
                   Text="Código interno asignado al banco"
                   Foreground="Gold"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
