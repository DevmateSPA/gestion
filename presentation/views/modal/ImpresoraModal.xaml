<Window x:Class="Gestion.presentation.views.windows.ImpresoraModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar Impresora"
        Height="400" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Impresora seleccionada -->
        <Border Background="#F2F2F2" Padding="8" CornerRadius="4" Margin="0 0 0 8">
            <TextBlock x:Name="txtImpresoraSeleccionada"
                       FontWeight="SemiBold"
                       Text="Impresora seleccionada: No seleccionada"/>
        </Border>

        <!-- Lista de impresoras -->
        <ListView x:Name="lvImpresoras"
                  Grid.Row="1"
                  Margin="0 0 0 10"
                  SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Impresora"
                                    DisplayMemberBinding="{Binding}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- BotÃ³n -->
        <Button Grid.Row="2"
                Content="Seleccionar"
                Width="120" Height="35"
                HorizontalAlignment="Right"
                Click="BtnSeleccionar_Click"/>
    </Grid>
</Window>
