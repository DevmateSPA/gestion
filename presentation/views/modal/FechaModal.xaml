<Window x:Class="Gestion.presentation.views.windows.FechaModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Titulo}" 
        Height="250" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
             <TextBlock Text="Fecha Desde:" FontSize="14" Margin="0 5 0 3"/>
            <TextBox x:Name="txtDesde" 
                     FontSize="16" 
                     Height="30"
                     PreviewTextInput="FechaMask"
                     MaxLength="10"
                     HorizontalAlignment="Stretch"
                     />

            <TextBlock Text="Fecha Hasta:" FontSize="14" Margin="0 15 0 3"/>
            <TextBox x:Name="txtHasta" 
                     FontSize="16" 
                     Height="30"
                     PreviewTextInput="FechaMask"
                     MaxLength="10"
                     HorizontalAlignment="Stretch"
                     />
        </StackPanel>

        <Button Grid.Row="2" Content="Siguiente" 
                Margin="0 15 0 0" Height="30"
                HorizontalAlignment="Right" Width="100"
                Click="BtnSiguiente_Click"/>
    </Grid>
</Window>
