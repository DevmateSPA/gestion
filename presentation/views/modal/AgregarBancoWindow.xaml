<Window x:Class="Gestion.presentation.views.windows.AgregarBancoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Banco"
        Height="450" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="14"
        WindowStyle="None"
        BorderThickness="1"
        BorderBrush="#CCCCCC">

    <Border CornerRadius="10"
            BorderBrush="#DDDDDD"
            BorderThickness="1"
            Padding="25"
            Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Agregar Banco"
                       FontWeight="Bold"
                       FontSize="22"
                       Foreground="#333333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Contenido -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="Código" Width="130" VerticalAlignment="Center" Foreground="#555555"/>
                    <TextBox x:Name="txtCodigo"
                             Width="350"
                             Background="#FFFFFF"
                             Foreground="#222222"
                             BorderBrush="#CCCCCC"
                             Padding="6"
                             BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="Nombre" Width="130" VerticalAlignment="Center" Foreground="#555555"/>
                    <TextBox x:Name="txtNombre"
                             Width="350"
                             Background="#FFFFFF"
                             Foreground="#222222"
                             BorderBrush="#CCCCCC"
                             Padding="6"
                             BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="Dirección" Width="130" VerticalAlignment="Center" Foreground="#555555"/>
                    <TextBox x:Name="txtDireccion"
                             Width="350"
                             Background="#FFFFFF"
                             Foreground="#222222"
                             BorderBrush="#CCCCCC"
                             Padding="6"
                             BorderThickness="1"/>
                </StackPanel>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,25,0,0">
                <Button Content="Cancelar"
                        Width="110"
                        Click="BtnCancelar_Click"
                        Margin="0,0,15,0"
                        Background="#F3F3F3"
                        BorderBrush="#CCCCCC"
                        Foreground="#333333"
                        Padding="6,4"/>
                <Button Content="Guardar"
                        Width="110"
                        Background="#0078D7"
                        BorderBrush="#0078D7"
                        Foreground="White"
                        Padding="6,4"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
