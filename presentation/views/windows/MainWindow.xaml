<Window x:Class="Gestion.presentation.views.windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestion.presentation.views.windows"
        mc:Ignorable="d"
        d:DesignHeight="1080"
        d:DesignWidth="1920"
        Title="* Cambiame *"
        WindowState="Maximized">

    <DockPanel>

        <!-- Header -->
        <StackPanel DockPanel.Dock="Top"
                    Style="{StaticResource MainWindowHeaderStyle}"
                    Orientation="Horizontal">
            <Button Style="{StaticResource MainWindowButtonHeaderStyle}"
                    Content="Inicio"
                    Click="BtnInicio_Click"
                    Margin="5,0"/>
            <Button Style="{StaticResource MainWindowButtonHeaderStyle}"
                    Content="Agregar"
                    Click="BtnAgregar_Click"
                    Margin="5,0"/>
        </StackPanel>

        <!-- Footer: Links numerados -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,5"
                    Background="Transparent"
                    Height="20">

            <TextBlock Text="Links (Temporal mientras se crean los menus): "
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"/>

            <!-- ItemsControl horizontal limitado -->
            <ItemsControl ItemsSource="{Binding Links}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Margin="10,0"
                                   Text="{Binding Nombre}"
                                   TextDecorations="Underline"
                                   Foreground="Blue"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="Link_Click"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Contenido principal -->
        <Frame x:Name="MainFrame"
                NavigationUIVisibility="Hidden"/>

    </DockPanel>
</Window>
