<Window x:Class="Gestion.presentation.views.windows.EntidadEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar entidad"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">

    <DockPanel Margin="20" LastChildFill="True">

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Guardar" Width="120" Height="40" FontSize="16" Margin="0,0,5,0" Click="BtnGuardar_Click"/>
            <Button Content="Cancelar" Width="120" Height="40" FontSize="16" Click="BtnCancelar_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Campos automÃ¡ticos -->
                <StackPanel x:Name="spCampos" Orientation="Vertical"/>

                <!-- Campo Memo especial -->
                <StackPanel x:Name="spMemo" Orientation="Vertical" Margin="0,20,0,0" Visibility="Collapsed">
                    <TextBlock Text="Detalle" FontSize="16" FontWeight="Bold"/>
                    <TextBox x:Name="txtMemo"
                             FontSize="16"
                             AcceptsReturn="True"
                             Height="120"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>
