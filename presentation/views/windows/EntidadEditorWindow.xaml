<Window x:Class="Gestion.presentation.views.windows.EntidadEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar entidad"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">

    <DockPanel Margin="20">
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="spCampos" Margin="0,0,0,10"/>
        </ScrollViewer>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Guardar" Width="100" Margin="0,0,5,0" Click="BtnGuardar_Click"/>
            <Button Content="Cancelar" Width="100" Click="BtnCancelar_Click"/>
        </StackPanel>
    </DockPanel>
</Window>