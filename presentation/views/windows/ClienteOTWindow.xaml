<Window x:Class="Gestion.presentation.views.windows.ClienteOTWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestion.presentation.views.windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Orden de Trabajo" Height="600" Width="1000" Loaded="ClienteOTWindow_Loaded" KeyDown="Window_KeyDown">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Título -->
            <RowDefinition Height="*"/>      <!-- Tabla -->
            <RowDefinition Height="Auto"/>   <!-- Botón cerrar -->
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <TextBlock x:Name="TxtOT"
                   Text="OT"
                   FontSize="20"
                   Margin="0 0 0 15"
                   />

        <!-- TABLA -->
        <DataGrid x:Name="dgCartola"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding CartolaItems}"
                  FontSize="16">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Folio" Binding="{Binding Folio}" Width="*" />
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat={}{0:dd/MM/yyyy}}" Width="*" />
                <DataGridTextColumn Header="Trabajo" Binding="{Binding Trabajo}" Width="*" />
            </DataGrid.Columns>

        </DataGrid>

        <StackPanel Orientation="Horizontal"
            Grid.Row="2"
            HorizontalAlignment="Right"
            Margin="0 15 0 0">

            <Button Content="Imprimir (F4)"
                    Width="130" Height="40"
                    Margin="0 0 15 0"
                    Click="BtnImprimir_Click"/>

            <Button Content="Ver Documento (ENTER)"
                    Width="130" Height="40"
                    Margin="0 0 15 0"
                    Click="BtnDocumento_Click"/>

            <Button Content="Cerrar"
                    Width="120" Height="40"
                    Click="BtnCancelar_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
