<Window x:Class="Gestion.presentation.views.windows.ClienteCartolaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestion.presentation.views.windows"
        mc:Ignorable="d"
        Title="ClienteCartolaWindow" Height="450" Width="800" Loaded="ClienteCartolaWindow_Loaded">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Título -->
            <RowDefinition Height="*"/>      <!-- Tabla -->
            <RowDefinition Height="Auto"/>   <!-- Botón cerrar -->
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <TextBlock Text="Cartola"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0 0 0 15"
                   />

        <!-- TABLA -->
        <DataGrid x:Name="dgCartola"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding CartolaItems}"
                  FontSize="16">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Folio" Binding="{Binding Folio}" Width="*" />
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat={}{0:dd/MM/yyyy}}" Width="*" />
                <DataGridTextColumn Header="Debe" Binding="{Binding Debe, StringFormat={}{0:C0}}" Width="*" />
                <DataGridTextColumn Header="Haber" Binding="{Binding Haber, StringFormat={}{0:C0}}" Width="*" />
            </DataGrid.Columns>

        </DataGrid>

        <!-- BOTÓN CERRAR -->
        <Button Grid.Row="2"
                Content="Cerrar"
                Width="120"
                Height="40"
                HorizontalAlignment="Right"
                Margin="0 15 0 0"
                Click="BtnCancelar_Click" />
    </Grid>
</Window>
