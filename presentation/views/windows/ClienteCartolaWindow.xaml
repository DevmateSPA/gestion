<Window x:Class="Gestion.presentation.views.windows.ClienteCartolaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression.blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestion.presentation.views.windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Cartola" Height="600" Width="1000" KeyDown="Window_KeyDown">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Título -->
            <RowDefinition Height="*"/>      <!-- Tabla -->
            <RowDefinition Height="Auto"/>   <!-- Saldo Final + Botones -->
        </Grid.RowDefinitions>

        <!-- TÍTULOS -->
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <TextBlock x:Name="TxtCartola"
                       Text="Cartola"
                       FontSize="20"
                       Margin="0 0 0 15"/>

            <TextBlock x:Name="TxtSaldo"
                       Text="Saldo"
                       FontSize="20"
                       Margin="0 0 0 15"/>
        </StackPanel>

        <!-- TABLA -->
        <DataGrid x:Name="dgFacturas"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding EntidadesView}"
                  IsReadOnly="True" 
                  MouseDoubleClick="dgFacturas_MouseDoubleClick" 
                  FontSize="16">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="*" />
                <DataGridTextColumn Header="Folio" Binding="{Binding Folio}" Width="*" />
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat={}{0:dd/MM/yyyy}}" Width="*" />
                <DataGridTextColumn Header="TOTAL" Binding="{Binding Debe, StringFormat={}{0:C0}}" Width="*" />
                <DataGridTextColumn Header="Haber" Binding="{Binding Habe, StringFormat={}{0:C0}}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- SALDO FINAL + BOTONES (AHORA SÍ ABAJO) -->
        <StackPanel Grid.Row="2" Margin="0 15 0 0">
            <TextBlock x:Name="TxtSaldoFinal"
                       Text="Saldo Final"
                       FontSize="20"
                       Margin="0 0 0 15"/>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Ver Factura (ENTER)"
                        Width="130" Height="40"
                        Margin="0 0 15 0"
                        Click="BtnFactura_Click"/>

                <Button Content="Cerrar (ESC)"
                        Width="120" Height="40"
                        Margin="0 0 15 0"
                        Click="BtnCancelar_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
