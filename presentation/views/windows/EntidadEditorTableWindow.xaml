<Window x:Class="Gestion.presentation.views.windows.EntidadEditorTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar entidad con tabla"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MaxWidth="1100"
        MaxHeight="900">

    <DockPanel Margin="20" LastChildFill="True">

        <!-- Botones -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="20">
            <Button Content="Guardar"
                    x:Name="btnGuardar"
                    Width="140" Height="40"
                    Margin="0 0 10 0"
                    Click="BtnGuardar_Click"
                    Visibility="Collapsed" />
            <Button Content="Imprimir"
                    x:Name="btnImprimir"
                    Width="140" Height="40"
                    Margin="0 0 10 0"
                    Click="BtnImprimir_Click" 
                    Visibility="Collapsed" />
            <Button Content="Cerrar"
                    Width="140" Height="40"
                    Click="BtnCancelar_Click" />
        </StackPanel>

        <!-- CONTENIDO -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="spCampos"
                            Orientation="Vertical"
                            Margin="0,0,0,10"
                            Grid.Row="0"/>

                <Grid x:Name="spTabla"
                    Margin="0,10,0,0"
                    Grid.Row="1"/>
            </Grid>
        </ScrollViewer>

    </DockPanel>
</Window>
