<Window x:Class="Gestion.presentation.views.windows.EntidadEditorTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar entidad con tabla"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="Height">

    <DockPanel Margin="20" LastChildFill="True">

        <!-- Botones -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Guardar" Width="120" Height="40" FontSize="16" Margin="0,0,5,0" Click="BtnGuardar_Click"/>
            <Button Content="Cancelar" Width="120" Height="40" FontSize="16" Click="BtnCancelar_Click"/>
        </StackPanel>

        <!-- Contenido -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="spPrincipal" Orientation="Vertical">
                <StackPanel x:Name="spCampos" Orientation="Vertical" Margin="0,0,0,10"/>
                <DataGrid x:Name="dgDetalles"
                    AutoGenerateColumns="False"
                    CanUserAddRows="True"
                    CanUserDeleteRows="True"
                    Height="250"
                    FontSize="14"
                    Margin="0,10,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="*" />
                    <DataGridTextColumn Header="Entrada" Binding="{Binding Entrada}" Width="*" />
                    <DataGridTextColumn Header="Salida" Binding="{Binding Salida}" Width="*" />
                    <DataGridTextColumn Header="Maquina" Binding="{Binding Maquina}" Width="*" />
                    <DataGridTextColumn Header="Operario" Binding="{Binding Operario}" Width="*" />
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
