<Page x:Class="Gestion.presentation.views.pages.FacturaCompraPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gestion.presentation.views.pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="Facturas Compra" >

    <Grid Margin="10">  
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Input búsqueda -->
            <RowDefinition Height="*"/>    <!-- Tabla -->
            <RowDefinition Height="Auto"/> <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Input de búsqueda -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <TextBlock Text="Buscar:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtBuscar" Width="200" Height="25" />
        </StackPanel>

        <!-- Tabla -->
        <DataGrid x:Name="dgFacturasCompra"
                Grid.Row="1"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                SelectionMode="Single"
                ItemsSource="{Binding FacturasCompra}"
                FontSize="16"
                IsReadOnly="True"
                MouseDoubleClick="dgFacturasCompra_MouseDoubleClick" 
                PreviewKeyDown="dgFacturasCompra_PreviewKeyDown">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Folio" Binding="{Binding Folio}" Width="*" />
                    <DataGridTextColumn Header="Proveedor" Binding="{Binding RutCliente}" Width="*" />
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat={}{0:dd/MM/yyyy}}" Width="*" />
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="*" />
                    <DataGridTextColumn Header="Iva" Binding="{Binding Iva}" Width="*" />
                    <DataGridTextColumn Header="Neto" Binding="{Binding Neto}" Width="*" />
                    <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="*" />
                </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button Width="150" Height="50" Content="Agregar (Ins)" Click="BtnAgregar_Click" Margin="5"/>
            <Button Width="150" Height="50"  Content="Eliminar (Del)" Click="BtnEliminar_Click" Margin="5"/>
            <Button Width="150" Height="50"  Content="Editar (Enter)" Click="BtnEditar_Click" Margin="5"/>
            <Button Width="150" Height="50"  Content="Buscar (F2)" Click="BtnBuscar_Click" Margin="5"/>
            <Button Width="150" Height="50"  Content="Imprimir (F4)" Click="BtnImprimir_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
