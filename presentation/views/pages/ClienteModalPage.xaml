<Window x:Class="Gestion.presentation.views.windows.ClienteModalPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clientes"
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        KeyDown="Window_KeyDown">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Input búsqueda -->
            <RowDefinition Height="*"/>    <!-- Tabla -->
            <RowDefinition Height="Auto"/> <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Input de búsqueda -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <TextBlock Text="Buscar:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtBuscar" Width="200" Height="25" />
        </StackPanel>

        <!-- Tabla -->
        <DataGrid x:Name="dgClientes" Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="RUT" Binding="{Binding RUT}" Width="150"/>
                <DataGridTextColumn Header="Razón Social" Binding="{Binding RazonSocial}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button Content="Agregar (Ins)" Click="BtnAgregar_Click" Margin="5"/>
            <Button Content="Eliminar (Del)" Click="BtnEliminar_Click" Margin="5"/>
            <Button Content="Editar (Enter)" Click="BtnEditar_Click" Margin="5"/>
            <Button Content="Buscar (F2)" Click="BtnBuscar_Click" Margin="5"/>
            <Button Content="Imprimir (F4)" Click="BtnImprimir_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
