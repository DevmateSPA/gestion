<Page x:Class="Gestion.presentation.views.pages.AgregarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gestion.presentation.views.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AgregarPage">

    <Grid Style="{StaticResource GridStyle}">
        <StackPanel
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Orientation="Vertical">
            <StackPanel
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                Margin="0, 0, 0, 20"
                Orientation="Horizontal">
                <Button
                    Content="Ver Clientes"
                    Click="BtnVerClientes_Click" />
                <Button
                    Content="Ver Proveedores" />
            </StackPanel>
            <TextBlock
                Text="Tabla de lo que necesitemos?"
                Background="#fff"/>
        </StackPanel>

        <ListView x:Name="ClientesListView" Width="1920" Height="920"  Margin="0,20,0,0"> 
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Rut" DisplayMemberBinding="{Binding Rut}" Width="100"/>
                    <GridViewColumn Header="Razón Social" DisplayMemberBinding="{Binding RazonSocial}" Width="150"/>
                    <GridViewColumn Header="Giro" DisplayMemberBinding="{Binding Giro}" Width="100"/>
                    <GridViewColumn Header="Dirección" DisplayMemberBinding="{Binding Direccion}" Width="100"/>
                    <GridViewColumn Header="Ciudad" DisplayMemberBinding="{Binding Ciudad}" Width="100"/>
                    <GridViewColumn Header="Teléfono" DisplayMemberBinding="{Binding Rut}" Width="100"/>
                    <GridViewColumn Header="Fax" DisplayMemberBinding="{Binding Fax}" Width="100"/>
                    <GridViewColumn Header="Obs1" DisplayMemberBinding="{Binding Obs1}" Width="100"/>
                    <GridViewColumn Header="Obs2" DisplayMemberBinding="{Binding Obs2}" Width="100"/>
                    <GridViewColumn Header="Debi" DisplayMemberBinding="{Binding Debi}" Width="100"/>
                    <GridViewColumn Header="Habi" DisplayMemberBinding="{Binding Habi}" Width="100"/>
                    <GridViewColumn Header="Debe" DisplayMemberBinding="{Binding Debe}" Width="100"/>
                    <GridViewColumn Header="Habe" DisplayMemberBinding="{Binding Habe}" Width="100"/>
                    <GridViewColumn Header="Saldo" DisplayMemberBinding="{Binding Saldo}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
