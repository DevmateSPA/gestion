<Page x:Class="Gestion.presentation.views.pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gestion.presentation.views.pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="LoginPage">

    <Grid 
        Background="{StaticResource bg-dark}">
        <StackPanel 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Background="{StaticResource bg-card-dark}">
                    <TextBlock 
                        Text="Inicio de sesión" 
                        Margin="0, 0, 0, 5" 
                        HorizontalAlignment="Center"/>
                    <StackPanel>
                        <StackPanel 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                            <TextBlock 
                                Text="Usuario: " 
                                Margin="0, 0, 5, 0"/>
                            <TextBox 
                                Text="Usuario" 
                                Margin="0,0,0,5" />
                        </StackPanel>
                        <StackPanel 
                                Orientation="Horizontal" 
                                Margin="0, 0, 0, 5" 
                                HorizontalAlignment="Center">
                            <TextBlock 
                                Text="Contraseña: " 
                                Margin="0, 0, 5, 0"/>
                            <TextBox 
                                Text="Contraseña" 
                                Margin="0,0,0,5" />
                        </StackPanel>
                    </StackPanel>
                    <Button 
                        Content="Iniciar sesión" 
                        Click="BtnInicioSesion_Click" 
                        HorizontalAlignment="Center" />
            </StackPanel>
    </Grid>
</Page>
