<Page x:Class="Gestion.presentation.views.pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gestion.presentation.views.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Style="{StaticResource GridStyle}">
        <Border Style="{StaticResource MainBorderStyle}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- IMAGEN -->
                <Image
                    x:Name="imgLogo"
                    Width="200"
                    Height="100"
                    Stretch="Uniform"
                    Margin="0,0,0,20"/>

                <!-- TEXTOS -->
                <TextBlock
                    x:Name="txtEmpresa"
                    Text="Pantalla Principal"
                    Background="#fff"
                    Height="40"
                    Width="350"
                    TextAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"/>

                <TextBlock
                    x:Name="txtUsuario"
                    Text="Pantalla Principal"
                    Background="#fff"
                    Height="40"
                    Width="350"
                    TextAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"/>

                <TextBlock
                    x:Name="txtFecha"
                    Text="Pantalla Principal"
                    Background="#fff"
                    Height="40"
                    Width="350"
                    TextAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
