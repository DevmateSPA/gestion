<Page x:Class="Gestion.presentation.views.pages.CuentaCorrienteClientePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:loadingOverlay="clr-namespace:Gestion.presentation.views.resources.loading"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="Cuenta Corriente Clientes">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Input búsqueda -->
            <RowDefinition Height="*"/>    <!-- Tabla -->
            <RowDefinition Height="Auto"/> <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Input de búsqueda -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <TextBlock Text="Buscar:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtBuscar" Width="200" Height="25" />
        </StackPanel>

        <!-- LOADING OVERLAY -->
        <loadingOverlay:LoadingOverlay
            IsLoading="{Binding IsLoading}"
            Grid.RowSpan="3"
            Panel.ZIndex="999"/>

        <!-- Tabla -->
        <DataGrid x:Name="dgClientes"
                Grid.Row="1"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                SelectionMode="Single"
                ItemsSource="{Binding EntidadesView}" 
                FontSize="16" 
                IsReadOnly="True"
                MouseDoubleClick="dataGrid_MouseDoubleClick" 
                PreviewKeyDown="DataGrid_PreviewKeyDown">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Rut" Binding="{Binding Rut}" Width="*" />
                    <DataGridTextColumn Header="Razón Social" Binding="{Binding Razon_Social}" Width="*" />
                    <DataGridTextColumn Header="Debe" Binding="{Binding Debe, StringFormat={}{0:C0}}" Width="*" />
                    <DataGridTextColumn Header="Haber" Binding="{Binding Habe, StringFormat={}{0:C0}}" Width="*" />
                </DataGrid.Columns>
                </DataGrid>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button Width="150" Height="50"  Content="Buscar (F2)" Click="BtnBuscar_Click" Margin="5"/>
            <Button Width="150" Height="50"  Content="Saldos (F3)" Click="BtnSaldos_Click" Margin="5"/>
            <Button Width="150" Height="50"  Content="Cartola (ENTER)" Click="BtnCartola_Click" Margin="5"/>
            <Button Width="150" Height="50"  Content="Cancelar (ESC)" Click="BtnCancelar_Click" Margin="5"/>
            <Button Width="150" Height="50"  Content="O.T. (F7)" Click="BtnOT_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
